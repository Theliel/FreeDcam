<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_rgb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/curveViewButtonHeight"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="RGB" />

        <Button
            android:id="@+id/button_red"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/curveViewButtonHeight"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:text="R" />

        <Button
            android:id="@+id/button_green"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/curveViewButtonHeight"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="G" />

        <Button
            android:id="@+id/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/curveViewButtonHeight"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="B" />
    </LinearLayout>

    <view
        android:id="@+id/curveViewHolder"
        class="freed.utils.CurveView"
        layout_width="match_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalScrollView2"
        android:layout_centerInParent="false"
        android:layout_toLeftOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/frameLayout"
        android:background="@color/uiSettingsBackground" />
</LinearLayout>